PATH=$PATH:~/lib/scala/current/bin
PATH=$PATH:~/lib/z3/current/bin
PATH=$PATH:~/lib/racket/current/bin
PATH=$PATH:~/lib/play/current

EDITOR=vim

alias ll='ls -l'
alias la='ls -la'
alias vi='vim'
alias winterm='rdesktop -u koksal -d EECS -x lan -f winterm.eecs.berkeley.edu'
alias open='opn'
alias guile='rlwrap guile'
alias racket='rlwrap racket'

function cgrep() {
  rgrep $1 $2 | grep -v "Binary file" | grep $1
}

set -o vi

eval `keychain --quiet --eval ~/.ssh/id_rsa`

source ~/.git-completion.sh
source ~/.git-prompt.sh

# Reset
Color_Off='\e[0m'       # Text Reset

# Regular Colors
Black='\e[0;30m'        # Black
Red='\e[0;31m'          # Red
Green='\e[0;32m'        # Green
Yellow='\e[0;33m'       # Yellow
Blue='\e[0;34m'         # Blue
Purple='\e[0;35m'       # Purple
Cyan='\e[0;36m'         # Cyan
White='\e[0;37m'        # White

# High Intensity
IBlack='\e[0;90m'       # Black
IRed='\e[0;91m'         # Red
IGreen='\e[0;92m'       # Green
IYellow='\e[0;93m'      # Yellow
IBlue='\e[0;94m'        # Blue
IPurple='\e[0;95m'      # Purple
ICyan='\e[0;96m'        # Cyan
IWhite='\e[0;97m'       # White

GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWCOLORHINTS=true
GIT_PS1_SHOWUPSTREAM="auto"

PROMPT_COMMAND='__git_ps1 "\[$Green\]\h\[$Color_Off\]:\[$IRed\]\w\[$Color_Off\]\[$Cyan\]" "\[$Color_Off\] \\$ "'
